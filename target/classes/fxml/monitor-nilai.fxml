<?xml version="1.0" encoding="UTF-8"?>

<!--
  Monitor Nilai Scene - Melihat nilai dan histori pengerjaan siswa
  Guru dapat melihat semua nilai tes dan status proyek siswa
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.goop.controllers.MonitorNilaiController"
            styleClass="dashboard-container">
    
    <top>
        <HBox styleClass="content-area" spacing="20" alignment="CENTER_LEFT">
            <padding><Insets top="20" right="30" bottom="10" left="30"/></padding>
            <Button text="â† Kembali" onAction="#handleBack" styleClass="btn-secondary"/>
            <Text text="Monitor Nilai" styleClass="page-title"/>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <content>
                <VBox styleClass="content-area" spacing="25">
                    <padding><Insets top="10" right="30" bottom="30" left="30"/></padding>
                    
                    <!-- Pilih Siswa -->
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Pilih Siswa:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <ComboBox fx:id="siswaComboBox" prefWidth="250" onAction="#handleSiswaSelected"/>
                    </HBox>
                    
                    <!-- Summary Siswa -->
                    <GridPane fx:id="summaryGrid" hgap="20" vgap="20" visible="false" managed="false">
                        <VBox styleClass="score-box" spacing="10" GridPane.columnIndex="0" prefWidth="250" prefHeight="120">
                            <Label text="Skor Tes Kognitif" styleClass="score-label"/>
                            <Label fx:id="skorTesLabel" text="0" styleClass="score-value"/>
                            <Label text="dari 100" styleClass="score-label"/>
                        </VBox>
                        
                        <VBox styleClass="score-box" spacing="10" GridPane.columnIndex="1" prefWidth="250" prefHeight="120">
                            <Label text="Proyek Selesai" styleClass="score-label"/>
                            <Label fx:id="proyekSelesaiLabel" text="0" styleClass="score-value"/>
                            <Label text="proyek" styleClass="score-label"/>
                        </VBox>
                        
                        <VBox styleClass="score-box" spacing="10" GridPane.columnIndex="2" prefWidth="250" prefHeight="120">
                            <Label text="Total Proyek" styleClass="score-label"/>
                            <Label fx:id="totalProyekLabel" text="0" styleClass="score-value"/>
                            <Label text="assigned" styleClass="score-label"/>
                        </VBox>
                    </GridPane>
                    
                    <!-- Histori Tes -->
                    <VBox styleClass="card" spacing="15" fx:id="historiTesCard" visible="false" managed="false">
                        <Text text="Histori Tes Kognitif" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <VBox fx:id="historiTesContainer" spacing="10"/>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
</BorderPane>
