<?xml version="1.0" encoding="UTF-8"?>

<!--
  Tes Kognitif Scene - Mengerjakan tes dengan soal pilihan ganda
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.goop.controllers.TesKognitifController"
            styleClass="dashboard-container">
    
    <top>
        <HBox styleClass="content-area" spacing="20" alignment="CENTER_LEFT">
            <padding><Insets top="20" right="30" bottom="10" left="30"/></padding>
            <Button text="← Kembali" onAction="#handleBack" styleClass="btn-secondary"/>
            <Text fx:id="judulTes" text="Tes Kognitif OOP" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="timerLabel" text="Waktu: 30:00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5B4FC8;"/>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <content>
                <VBox styleClass="content-area" spacing="20">
                    <padding><Insets top="10" right="30" bottom="30" left="30"/></padding>
                    
                    <!-- Progress -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Progress:" style="-fx-font-weight: bold;"/>
                        <ProgressBar fx:id="progressBar" prefWidth="200" progress="0"/>
                        <Label fx:id="progressLabel" text="0 / 10"/>
                    </HBox>
                    
                    <!-- Soal Container -->
                    <VBox fx:id="soalContainer" styleClass="card" spacing="20">
                        <Text fx:id="soalText" text="Pertanyaan akan muncul di sini" wrappingWidth="700" style="-fx-font-size: 16px; -fx-fill: #2f3542;"/>
                        
                        <fx:define>
                            <ToggleGroup fx:id="pilihanGroup"/>
                        </fx:define>
                        
                        <RadioButton fx:id="pilihanA" text="A. " toggleGroup="$pilihanGroup" style="-fx-font-size: 14px;"/>
                        <RadioButton fx:id="pilihanB" text="B. " toggleGroup="$pilihanGroup" style="-fx-font-size: 14px;"/>
                        <RadioButton fx:id="pilihanC" text="C. " toggleGroup="$pilihanGroup" style="-fx-font-size: 14px;"/>
                        <RadioButton fx:id="pilihanD" text="D. " toggleGroup="$pilihanGroup" style="-fx-font-size: 14px;"/>
                        
                        <HBox spacing="10">
                            <Button text="← Soal Sebelumnya" fx:id="btnPrev" onAction="#handlePrevious" styleClass="btn-secondary"/>
                            <Button text="Soal Berikutnya →" fx:id="btnNext" onAction="#handleNext" styleClass="btn-primary"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="✓ Submit Jawaban" fx:id="btnSubmit" onAction="#handleSubmit" styleClass="btn-success"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Hasil Panel (hidden initially) -->
                    <VBox fx:id="hasilPanel" styleClass="card" spacing="15" visible="false" managed="false">
                        <Text text="Hasil Tes Kognitif" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label fx:id="skorLabel" text="Skor: 0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #5B4FC8;"/>
                        <Label fx:id="keteranganLabel" text="Kategori: -" style="-fx-font-size: 16px;"/>
                        <Button text="Kembali ke Dashboard" onAction="#handleBack" styleClass="btn-primary"/>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
</BorderPane>
