<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.goop.controllers.HistoriController"
            stylesheets="@../css/style.css">

    <top>
        <VBox styleClass="header" spacing="10">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Kembali" onAction="#handleBack" styleClass="btn-secondary"/>
                <Text text="Histori Pengerjaan" styleClass="page-title"/>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Pilih Siswa:" styleClass="label-bold"/>
                <ComboBox fx:id="comboSiswa" prefWidth="300" promptText="Pilih siswa..."/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox fx:id="historiContainer" spacing="15" styleClass="content-container">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>
                
                <Label text="Pilih siswa untuk melihat histori pengerjaan" 
                       styleClass="info-text"/>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
