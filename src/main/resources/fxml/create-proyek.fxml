<?xml version="1.0" encoding="UTF-8"?>

<!-- Create Proyek Scene - Form untuk Guru membuat proyek baru -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.goop.controllers.CreateProyekController"
            styleClass="dashboard-container">
    
    <top>
        <HBox styleClass="content-area" spacing="20" alignment="CENTER_LEFT">
            <padding><Insets top="20" right="30" bottom="10" left="30"/></padding>
            <Button text="â† Kembali" onAction="#handleBack" styleClass="btn-secondary"/>
            <Text text="Buat Proyek Baru" styleClass="page-title"/>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <content>
                <VBox styleClass="content-area" spacing="20" maxWidth="800">
                    <padding><Insets top="10" right="30" bottom="30" left="30"/></padding>
                    
                    <VBox styleClass="card" spacing="15">
                        <Text text="ðŸ“ Detail Proyek" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        
                        <GridPane hgap="15" vgap="15">
                            <Label text="Judul Proyek:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                            <TextField fx:id="txtJudul" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                                       styleClass="form-input" prefWidth="400" 
                                       promptText="Contoh: Aplikasi Inventory OOP"/>
                            
                            <Label text="Deskripsi:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                            <TextArea fx:id="txtDeskripsi" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                      styleClass="form-input" prefHeight="100"
                                      promptText="Jelaskan detail proyek dan yang harus dikerjakan siswa..."
                                      wrapText="true"/>
                            
                            <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                            <DatePicker fx:id="dateDeadline" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                        styleClass="form-input" prefWidth="200"/>
                            
                            <Label text="Assign ke Siswa:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                            <ComboBox fx:id="comboSiswa" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                      prefWidth="300" promptText="Pilih siswa..."/>
                        </GridPane>
                        
                        <HBox spacing="10">
                            <Button text="âœ… Buat Proyek" onAction="#handleCreateProyek" styleClass="btn-success"/>
                            <Button text="ðŸ—‘ï¸ Reset Form" onAction="#handleReset" styleClass="btn-secondary"/>
                        </HBox>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
</BorderPane>
